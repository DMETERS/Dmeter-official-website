---
import Layout from '../layouts/Layout.astro';

const lang = 'es';
---

<Layout lang={lang}>
  <main class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-cyan/10 rounded-full blur-3xl"></div>
    </div>

    <div class="relative text-center px-4 py-20">
      <!-- Ilustración de planta marchita/perdida -->
      <div class="mb-8 flex justify-center">
        <div class="relative">
          <!-- Maceta -->
          <svg class="w-32 h-32 text-primary/30" viewBox="0 0 100 100" fill="none" stroke="currentColor" stroke-width="2">
            <!-- Maceta -->
            <path d="M25 45 L30 85 L70 85 L75 45 Z" fill="currentColor" opacity="0.2" stroke="currentColor"/>
            <!-- Tierra -->
            <ellipse cx="50" cy="45" rx="25" ry="8" fill="currentColor" opacity="0.3"/>
            <!-- Tallo caído -->
            <path d="M50 45 Q45 30 35 35" stroke="currentColor" stroke-width="3" stroke-linecap="round" fill="none" class="animate-sway"/>
            <!-- Hoja caída -->
            <path d="M35 35 Q30 30 35 25 Q40 30 35 35" fill="currentColor" opacity="0.5"/>
            <!-- Signo de pregunta -->
            <text x="50" y="70" text-anchor="middle" fill="currentColor" font-size="20" font-weight="bold" opacity="0.5">?</text>
          </svg>

          <!-- 404 flotante -->
          <div class="absolute -top-4 -right-4 text-6xl font-bold text-primary/20 animate-float">
            404
          </div>
        </div>
      </div>

      <!-- Texto -->
      <h1 class="text-4xl sm:text-5xl font-display font-bold text-text-light mb-4">
        Página no encontrada
      </h1>
      <p class="text-lg text-text-muted mb-8 max-w-md mx-auto">
        Parece que esta semilla no germinó aquí. Pero no te preocupes, hay muchas otras creciendo.
      </p>

      <!-- CTA -->
      <a
        href="/"
        class="inline-flex items-center gap-2 px-6 py-3 bg-primary hover:bg-primary-dark text-bg-dark font-semibold rounded-full transition-all hover:scale-105"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Volver al inicio
      </a>

      <!-- Links secundarios -->
      <div class="mt-8 flex flex-wrap justify-center gap-4 text-sm">
        <a href="/#services" class="text-text-muted hover:text-primary transition-colors">
          Servicios
        </a>
        <span class="text-text-dim">·</span>
        <a href="/#cases" class="text-text-muted hover:text-primary transition-colors">
          Casos de éxito
        </a>
        <span class="text-text-dim">·</span>
        <a href="/#contact" class="text-text-muted hover:text-primary transition-colors">
          Contacto
        </a>
      </div>
    </div>
  </main>
</Layout>
