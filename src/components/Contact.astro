---
import { type Lang, defaultLang, useTranslations } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

// Placeholder values - replace with actual values
const CONTACT_EMAIL = 'hola@dmeter.dev';
const WHATSAPP_NUMBER = '+1234567890'; // Replace with actual number
const INSTAGRAM_URL = 'https://www.instagram.com/dmeter2022/';
---

<section id="contact" class="py-20 md:py-32 relative">
  <!-- Video background sutil de Demeter -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute w-full h-full object-cover opacity-10"
      style="filter: sepia(20%) hue-rotate(70deg) saturate(1.3);"
    >
      <source src="/videos/demeter-contact.mp4" type="video/mp4" />
    </video>
    <!-- Overlay gradiente para integraciÃ³n con paleta Solarpunk -->
    <div class="absolute inset-0 bg-gradient-to-b from-bg-dark/80 via-bg-dark/60 to-bg-card/90"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold">
        {t.contact.title}
      </h2>
      <p class="mt-4 text-lg text-text-muted">
        {t.contact.subtitle}
      </p>
    </div>

    <!-- Formulario centrado -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-bg-card/80 backdrop-blur-sm border border-primary/20 rounded-2xl p-6 md:p-8">
        <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-6">
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>

          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-text-light mb-2">
                {t.contact.form.name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light placeholder:text-text-dim focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-text-light mb-2">
                {t.contact.form.email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light placeholder:text-text-dim focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
              />
            </div>
          </div>

          <div>
            <label for="project" class="block text-sm font-medium text-text-light mb-2">
              {t.contact.form.project}
            </label>
            <select
              id="project"
              name="project"
              required
              class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
            >
              {t.contact.form.projectOptions.map((option) => (
                <option value={option}>{option}</option>
              ))}
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-text-light mb-2">
              {t.contact.form.message}
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light placeholder:text-text-dim focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full gradient-solarpunk text-white py-4 rounded-xl font-semibold text-lg hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
          >
            {t.contact.form.submit}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
          </button>
        </form>
      </div>

      <!-- Contact info en fila horizontal -->
      <div class="mt-12 flex flex-wrap justify-center gap-8">
        <!-- Email -->
        <a href={`mailto:${CONTACT_EMAIL}`} class="flex items-center gap-3 text-text-muted hover:text-primary transition-colors group">
          <div class="w-10 h-10 rounded-xl bg-primary/20 flex items-center justify-center group-hover:bg-primary/30 transition-colors">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <span>{CONTACT_EMAIL}</span>
        </a>

        <!-- WhatsApp -->
        <a href={`https://wa.me/${WHATSAPP_NUMBER.replace(/[^0-9]/g, '')}`} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-muted hover:text-accent-cyan transition-colors group">
          <div class="w-10 h-10 rounded-xl bg-accent-cyan/20 flex items-center justify-center group-hover:bg-accent-cyan/30 transition-colors">
            <svg class="w-5 h-5 text-accent-cyan" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </div>
          <span>WhatsApp</span>
        </a>

        <!-- Instagram -->
        <a href={INSTAGRAM_URL} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-muted hover:text-accent-solar transition-colors group">
          <div class="w-10 h-10 rounded-xl bg-accent-solar/20 flex items-center justify-center group-hover:bg-accent-solar/30 transition-colors">
            <svg class="w-5 h-5 text-accent-solar" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          <span>@dmeter2022</span>
        </a>
      </div>
    </div>
  </div>
</section>
