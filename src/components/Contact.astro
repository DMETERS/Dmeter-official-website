---
import { type Lang, defaultLang, useTranslations } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

// Placeholder values - replace with actual values
const CONTACT_EMAIL = 'hola@dmeter.dev';
const WHATSAPP_NUMBER = '+1234567890'; // Replace with actual number
const INSTAGRAM_URL = 'https://www.instagram.com/dmeter2022/';
---

<section id="contact" class="py-20 md:py-32 relative">
  <!-- Video background sutil de Demeter -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute w-full h-full object-cover opacity-10"
      style="filter: sepia(20%) hue-rotate(70deg) saturate(1.3);"
    >
      <source src="/videos/demeter-contact.mp4" type="video/mp4" />
    </video>
    <!-- Overlay gradiente para integración con paleta Solarpunk -->
    <div class="absolute inset-0 bg-gradient-to-b from-bg-dark/80 via-bg-dark/60 to-bg-card/90"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold">
        {t.contact.title}
      </h2>
      <p class="mt-4 text-lg text-text-muted">
        {t.contact.subtitle}
      </p>
    </div>

    <!-- Formulario centrado -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-bg-card/80 backdrop-blur-sm border border-primary/20 rounded-2xl p-6 md:p-8">
        <!-- Netlify Forms (comentado para producción)
        <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-6">
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>
        -->

        <!-- Web3Forms - Gratis hasta 250/mes -->
        <form id="contact-form" action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
          <input type="hidden" name="access_key" value="ea29f571-8d4c-42b7-8a31-c61239730a8d" />
          <input type="hidden" name="subject" value="Nuevo contacto desde Dmeter.dev" />
          <input type="hidden" name="from_name" value="Dmeter Website" />
          <input type="checkbox" name="botcheck" class="hidden" />

          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-text-light mb-2">
                {t.contact.form.name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder={t.contact.form.namePlaceholder}
                class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light placeholder:text-text-dim/60 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-text-light mb-2">
                {t.contact.form.email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder={t.contact.form.emailPlaceholder}
                class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light placeholder:text-text-dim/60 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
              />
            </div>
          </div>

          <div>
            <label for="project" class="block text-sm font-medium text-text-light mb-2">
              {t.contact.form.project}
            </label>
            <select
              id="project"
              name="project"
              required
              class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
            >
              {t.contact.form.projectOptions.map((option) => (
                <option value={option}>{option}</option>
              ))}
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-text-light mb-2">
              {t.contact.form.message}
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              placeholder={t.contact.form.messagePlaceholder}
              class="w-full px-4 py-3 bg-bg-dark border border-primary/20 rounded-xl text-text-light placeholder:text-text-dim/60 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="submit-btn w-full gradient-solarpunk text-white py-4 rounded-xl font-semibold text-lg hover:opacity-90 transition-all flex items-center justify-center gap-2"
          >
            <span class="btn-text">{t.contact.form.submit}</span>
            <svg class="w-5 h-5 btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
            <svg class="w-5 h-5 btn-loader hidden animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </form>

        <!-- Success State -->
        <div id="contact-success" class="hidden text-center py-12">
          <!-- Animación de planta floreciendo -->
          <div class="success-plant mx-auto mb-6 w-32 h-32 relative">
            <svg viewBox="0 0 100 100" class="w-full h-full">
              <!-- Maceta -->
              <path class="pot" d="M35 85 L40 70 L60 70 L65 85 Z" fill="#8B7355" opacity="0.8"/>
              <ellipse class="pot-top" cx="50" cy="70" rx="12" ry="3" fill="#9B8365"/>

              <!-- Tierra -->
              <ellipse class="soil" cx="50" cy="68" rx="10" ry="2" fill="#5D4037"/>

              <!-- Tallo principal -->
              <path class="stem" d="M50 68 Q50 45 50 30" stroke="#10B981" stroke-width="3" fill="none" stroke-linecap="round"/>

              <!-- Hojas que aparecen -->
              <path class="leaf leaf-1" d="M50 55 Q40 50 35 40 Q45 45 50 55" fill="#10B981" opacity="0"/>
              <path class="leaf leaf-2" d="M50 55 Q60 50 65 40 Q55 45 50 55" fill="#34D399" opacity="0"/>
              <path class="leaf leaf-3" d="M50 42 Q38 35 32 25 Q42 32 50 42" fill="#10B981" opacity="0"/>
              <path class="leaf leaf-4" d="M50 42 Q62 35 68 25 Q58 32 50 42" fill="#34D399" opacity="0"/>

              <!-- Flor central -->
              <g class="flower" opacity="0">
                <circle cx="50" cy="22" r="8" fill="#FFD700"/>
                <circle cx="50" cy="22" r="4" fill="#FFA500"/>
                <!-- Pétalos -->
                <ellipse cx="50" cy="12" rx="4" ry="6" fill="#FBBF24"/>
                <ellipse cx="58" cy="18" rx="4" ry="6" fill="#FBBF24" transform="rotate(72 50 22)"/>
                <ellipse cx="55" cy="28" rx="4" ry="6" fill="#FBBF24" transform="rotate(144 50 22)"/>
                <ellipse cx="45" cy="28" rx="4" ry="6" fill="#FBBF24" transform="rotate(216 50 22)"/>
                <ellipse cx="42" cy="18" rx="4" ry="6" fill="#FBBF24" transform="rotate(288 50 22)"/>
              </g>

              <!-- Partículas de luz -->
              <circle class="sparkle sparkle-1" cx="30" cy="20" r="2" fill="#FFD700" opacity="0"/>
              <circle class="sparkle sparkle-2" cx="70" cy="25" r="1.5" fill="#FFD700" opacity="0"/>
              <circle class="sparkle sparkle-3" cx="40" cy="35" r="1" fill="#10B981" opacity="0"/>
              <circle class="sparkle sparkle-4" cx="65" cy="15" r="1.5" fill="#34D399" opacity="0"/>
            </svg>
          </div>

          <h3 class="text-2xl font-bold text-primary mb-2">{t.contact.success?.title || '¡Mensaje enviado!'}</h3>
          <p class="text-text-muted mb-6">{t.contact.success?.subtitle || 'Tu idea ya está germinando. Te contactamos pronto.'}</p>

          <button id="reset-form" class="text-primary hover:text-primary-light underline transition-colors">
            {t.contact.success?.cta || 'Enviar otro mensaje'}
          </button>
        </div>
      </div>

      <!-- Contact info en fila horizontal -->
      <div class="mt-12 flex flex-wrap justify-center gap-8">
        <!-- Email -->
        <a href={`mailto:${CONTACT_EMAIL}`} class="flex items-center gap-3 text-text-muted hover:text-primary transition-colors group">
          <div class="w-10 h-10 rounded-xl bg-primary/20 flex items-center justify-center group-hover:bg-primary/30 transition-colors">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <span>{CONTACT_EMAIL}</span>
        </a>

        <!-- WhatsApp -->
        <a href={`https://wa.me/${WHATSAPP_NUMBER.replace(/[^0-9]/g, '')}`} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-muted hover:text-accent-cyan transition-colors group">
          <div class="w-10 h-10 rounded-xl bg-accent-cyan/20 flex items-center justify-center group-hover:bg-accent-cyan/30 transition-colors">
            <svg class="w-5 h-5 text-accent-cyan" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </div>
          <span>WhatsApp</span>
        </a>

        <!-- Instagram -->
        <a href={INSTAGRAM_URL} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-text-muted hover:text-accent-solar transition-colors group">
          <div class="w-10 h-10 rounded-xl bg-accent-solar/20 flex items-center justify-center group-hover:bg-accent-solar/30 transition-colors">
            <svg class="w-5 h-5 text-accent-solar" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          <span>@dmeter2022</span>
        </a>
      </div>

      <!-- S.O.S Link discreto -->
      <div class="mt-8 text-center">
        <button
          id="sos-trigger"
          class="text-text-dim/40 hover:text-primary/60 text-sm transition-colors duration-300"
        >
          {t.sos.trigger}
        </button>
      </div>
    </div>
  </div>

  <!-- Modal S.O.S Fullscreen -->
  <div id="sos-modal" class="fixed inset-0 z-50 hidden">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-bg-dark/98 backdrop-blur-xl sos-backdrop"></div>

    <!-- Contenido centrado -->
    <div class="relative h-full flex items-center justify-center p-4">
      <div class="sos-content w-full max-w-md">
        <!-- Botón cerrar -->
        <button id="sos-close" class="absolute top-6 right-6 text-text-dim hover:text-text-light transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>

        <!-- Icono S.O.S animado -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary/20 sos-pulse">
            <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <h3 class="mt-4 text-2xl font-bold text-text-light">{t.sos.title}</h3>
          <p class="mt-2 text-text-muted">{t.sos.subtitle}</p>
        </div>

        <!-- Formulario S.O.S -->
        <form name="sos" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-4">
          <input type="hidden" name="form-name" value="sos" />
          <input type="hidden" name="priority" value="urgent" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>

          <div>
            <label class="block text-sm text-text-muted mb-2">{t.sos.phone}</label>
            <input
              type="tel"
              name="phone"
              required
              placeholder="+54 9 11 1234-5678"
              class="w-full px-4 py-3 bg-bg-card border border-primary/30 rounded-xl text-text-light placeholder:text-text-dim focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
            />
          </div>

          <div>
            <label class="block text-sm text-text-muted mb-2">{t.sos.problem}</label>
            <textarea
              name="problem"
              required
              maxlength="280"
              rows="3"
              class="w-full px-4 py-3 bg-bg-card border border-primary/30 rounded-xl text-text-light placeholder:text-text-dim focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary resize-none transition-colors"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full gradient-solarpunk text-white py-4 rounded-xl font-semibold text-lg hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
          >
            {t.sos.submit}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación de la planta floreciendo */
  .success-plant .stem {
    stroke-dasharray: 40;
    stroke-dashoffset: 40;
    animation: growStem 0.6s ease-out 0.2s forwards;
  }

  .success-plant .leaf {
    transform-origin: center bottom;
    transform: scale(0);
  }

  .success-plant .leaf-1 { animation: growLeaf 0.4s ease-out 0.6s forwards; }
  .success-plant .leaf-2 { animation: growLeaf 0.4s ease-out 0.7s forwards; }
  .success-plant .leaf-3 { animation: growLeaf 0.4s ease-out 0.9s forwards; }
  .success-plant .leaf-4 { animation: growLeaf 0.4s ease-out 1s forwards; }

  .success-plant .flower {
    transform-origin: center;
    transform: scale(0);
    animation: bloomFlower 0.5s ease-out 1.2s forwards;
  }

  .success-plant .sparkle {
    animation: sparkle 0.6s ease-out forwards;
  }
  .success-plant .sparkle-1 { animation-delay: 1.4s; }
  .success-plant .sparkle-2 { animation-delay: 1.5s; }
  .success-plant .sparkle-3 { animation-delay: 1.6s; }
  .success-plant .sparkle-4 { animation-delay: 1.7s; }

  @keyframes growStem {
    to { stroke-dashoffset: 0; }
  }

  @keyframes growLeaf {
    0% { opacity: 0; transform: scale(0) rotate(-10deg); }
    100% { opacity: 1; transform: scale(1) rotate(0); }
  }

  @keyframes bloomFlower {
    0% { opacity: 0; transform: scale(0) rotate(-180deg); }
    100% { opacity: 1; transform: scale(1) rotate(0); }
  }

  @keyframes sparkle {
    0% { opacity: 0; transform: scale(0); }
    50% { opacity: 1; transform: scale(1.5); }
    100% { opacity: 0.8; transform: scale(1); }
  }

  /* Reset animaciones cuando se oculta el success */
  #contact-success.hidden .success-plant .stem,
  #contact-success.hidden .success-plant .leaf,
  #contact-success.hidden .success-plant .flower,
  #contact-success.hidden .success-plant .sparkle {
    animation: none;
  }

  /* S.O.S Modal */
  .sos-backdrop {
    animation: fadeIn 0.3s ease-out;
  }

  .sos-content {
    animation: scaleIn 0.3s ease-out;
  }

  .sos-pulse {
    animation: sosPulse 2s ease-in-out infinite;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes sosPulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
    }
    50% {
      box-shadow: 0 0 0 15px rgba(16, 185, 129, 0);
    }
  }

  /* Respeta reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .success-plant .stem,
    .success-plant .leaf,
    .success-plant .flower,
    .success-plant .sparkle,
    .input-organic::after {
      animation: none !important;
      transition: none !important;
      opacity: 1 !important;
      transform: none !important;
      stroke-dashoffset: 0 !important;
    }
  }
</style>

<script>
  // Contact Form Handler - Web3Forms
  const contactForm = document.getElementById('contact-form') as HTMLFormElement;
  const contactSuccess = document.getElementById('contact-success');
  const resetFormBtn = document.getElementById('reset-form');

  if (contactForm && contactSuccess) {
    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitBtn = contactForm.querySelector('.submit-btn') as HTMLButtonElement;
      const btnText = submitBtn?.querySelector('.btn-text');
      const btnIcon = submitBtn?.querySelector('.btn-icon');
      const btnLoader = submitBtn?.querySelector('.btn-loader');

      // Estado de carga
      if (submitBtn) submitBtn.disabled = true;
      if (btnText) btnText.classList.add('opacity-50');
      if (btnIcon) btnIcon.classList.add('hidden');
      if (btnLoader) btnLoader.classList.remove('hidden');

      try {
        const formData = new FormData(contactForm);

        const response = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          body: formData
        });

        const result = await response.json();

        if (result.success) {
          // Mostrar success state
          contactForm.classList.add('hidden');
          contactSuccess.classList.remove('hidden');

          // Forzar re-render de animaciones
          const plant = contactSuccess.querySelector('.success-plant');
          if (plant) {
            (plant as HTMLElement).style.display = 'none';
            (plant as HTMLElement).offsetHeight; // Trigger reflow
            (plant as HTMLElement).style.display = '';
          }
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        console.error('Error submitting form:', error);
        // Reset button state on error
        if (submitBtn) submitBtn.disabled = false;
        if (btnText) btnText.classList.remove('opacity-50');
        if (btnIcon) btnIcon.classList.remove('hidden');
        if (btnLoader) btnLoader.classList.add('hidden');
      }
    });
  }

  // Reset form button
  if (resetFormBtn && contactForm && contactSuccess) {
    resetFormBtn.addEventListener('click', () => {
      contactForm.reset();
      contactSuccess.classList.add('hidden');
      contactForm.classList.remove('hidden');

      const submitBtn = contactForm.querySelector('.submit-btn') as HTMLButtonElement;
      const btnText = submitBtn?.querySelector('.btn-text');
      const btnIcon = submitBtn?.querySelector('.btn-icon');
      const btnLoader = submitBtn?.querySelector('.btn-loader');

      if (submitBtn) submitBtn.disabled = false;
      if (btnText) btnText.classList.remove('opacity-50');
      if (btnIcon) btnIcon.classList.remove('hidden');
      if (btnLoader) btnLoader.classList.add('hidden');
    });
  }

  // S.O.S Modal
  const sosTrigger = document.getElementById('sos-trigger');
  const sosModal = document.getElementById('sos-modal');
  const sosClose = document.getElementById('sos-close');

  if (sosTrigger && sosModal && sosClose) {
    sosTrigger.addEventListener('click', () => {
      sosModal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });

    sosClose.addEventListener('click', () => {
      sosModal.classList.add('hidden');
      document.body.style.overflow = '';
    });

    // Cerrar con Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !sosModal.classList.contains('hidden')) {
        sosModal.classList.add('hidden');
        document.body.style.overflow = '';
      }
    });

    // Cerrar al hacer click en el backdrop
    sosModal.addEventListener('click', (e) => {
      if (e.target === sosModal || (e.target as Element).classList.contains('sos-backdrop')) {
        sosModal.classList.add('hidden');
        document.body.style.overflow = '';
      }
    });
  }
</script>
