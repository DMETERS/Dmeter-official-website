---
import { type Lang, defaultLang, useTranslations, languages, getPathWithLang } from '../i18n/utils';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const navItems = [
  { href: '#services', label: t.nav.services },
  { href: '#process', label: t.nav.process },
  { href: '#cases', label: t.nav.cases },
  { href: '#contact', label: t.nav.contact },
];
---

<header class="fixed top-0 left-0 right-0 z-50 glass">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href={getPathWithLang('/', lang)} class="flex items-center gap-2 group">
        <div class="w-8 h-8 rounded-lg gradient-solarpunk flex items-center justify-center">
          <span class="text-white font-bold text-lg">D</span>
        </div>
        <span class="text-xl font-display font-bold text-text-light group-hover:text-primary transition-colors">
          Dmeter
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-text-muted hover:text-primary transition-colors text-sm font-medium"
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Right side: Language + CTA -->
      <div class="hidden md:flex items-center gap-4">
        <LanguageSwitcher lang={lang} />
        <a
          href="#contact"
          class="gradient-solarpunk text-white px-5 py-2.5 rounded-lg font-medium text-sm hover:opacity-90 transition-opacity"
        >
          {t.nav.cta}
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        type="button"
        class="md:hidden p-2 text-text-muted hover:text-primary transition-colors"
        id="mobile-menu-button"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" id="menu-icon-open" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" id="menu-icon-close" class="hidden" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-4 space-y-1 border-t border-primary/20">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-3 text-text-muted hover:text-primary hover:bg-primary/10 rounded-lg transition-colors"
          >
            {item.label}
          </a>
        ))}
        <div class="pt-4 px-3">
          <LanguageSwitcher lang={lang} />
        </div>
        <div class="pt-2 px-3">
          <a
            href="#contact"
            class="block w-full text-center gradient-solarpunk text-white px-5 py-3 rounded-lg font-medium hover:opacity-90 transition-opacity"
          >
            {t.nav.cta}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('menu-icon-open');
  const iconClose = document.getElementById('menu-icon-close');

  menuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
  });

  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      iconOpen?.classList.remove('hidden');
      iconClose?.classList.add('hidden');
    });
  });
</script>
