<section class="py-16 relative overflow-hidden">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Título sutil -->
    <p class="text-center text-sm text-text-muted/60 mb-10 uppercase tracking-widest">
      {t.logos?.title || 'Integramos con'}
    </p>

    <!-- Grid de logos - isotipos simples -->
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 lg:gap-16">
      {logos.map((logo) => (
        <div
          class="group flex items-center gap-2 opacity-40 hover:opacity-100 grayscale hover:grayscale-0 transition-all duration-300"
          title={logo.name}
        >
          <div class="w-6 h-6 md:w-7 md:h-7 text-text-muted group-hover:text-text-light transition-colors [&>svg]:w-full [&>svg]:h-full" set:html={logo.svg} />
          <span class="text-sm md:text-base font-medium text-text-muted group-hover:text-text-light transition-colors">{logo.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>
