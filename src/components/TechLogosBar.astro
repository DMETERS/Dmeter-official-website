<section class="py-16 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Título sutil -->
    <p class="text-center text-sm text-text-muted/60 mb-10 uppercase tracking-widest">
      {t.logos?.title || 'Integramos con'}
    </p>
  </div>

  <!-- Carousel infinito + draggable -->
  <div class="logos-carousel relative overflow-hidden cursor-grab active:cursor-grabbing select-none">
    <!-- Fade en los bordes -->
    <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-bg-dark to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-bg-dark to-transparent z-10 pointer-events-none"></div>

    <div class="logos-track flex items-center gap-12 md:gap-16">
      {/* Duplicamos para efecto infinito */}
      {[...logos, ...logos, ...logos].map((logo) => (
        <div
          class="logo-item flex-shrink-0 flex items-center gap-2.5 opacity-50 hover:opacity-100 transition-opacity duration-300"
          title={logo.name}
        >
          <div class="w-5 h-5 md:w-6 md:h-6 text-text-muted [&>svg]:w-full [&>svg]:h-full" set:html={logo.svg} />
          <span class="text-sm font-medium text-text-muted whitespace-nowrap">{logo.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes scroll-logos {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% / 3));
    }
  }

  .logos-track {
    animation: scroll-logos 40s linear infinite;
    width: max-content;
  }

  .logos-carousel:hover .logos-track {
    animation-play-state: paused;
  }

  .logos-carousel.is-dragging .logos-track {
    animation-play-state: paused;
  }

  @media (prefers-reduced-motion: reduce) {
    .logos-track {
      animation: none;
    }
  }
</style>

<script>
  const carousel = document.querySelector('.logos-carousel') as HTMLElement;
  const track = document.querySelector('.logos-track') as HTMLElement;

  if (carousel && track) {
    let isDown = false;
    let startX: number;
    let scrollLeft: number;
    let currentTranslate = 0;

    // Obtener el translate actual de la animación
    const getTranslateX = () => {
      const style = window.getComputedStyle(track);
      const matrix = new DOMMatrix(style.transform);
      return matrix.m41;
    };

    carousel.addEventListener('mousedown', (e) => {
      isDown = true;
      carousel.classList.add('is-dragging');
      startX = e.pageX;
      currentTranslate = getTranslateX();
      track.style.transform = `translateX(${currentTranslate}px)`;
    });

    carousel.addEventListener('mouseleave', () => {
      if (isDown) {
        isDown = false;
        carousel.classList.remove('is-dragging');
        track.style.transform = '';
      }
    });

    carousel.addEventListener('mouseup', () => {
      isDown = false;
      carousel.classList.remove('is-dragging');
      track.style.transform = '';
    });

    carousel.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX;
      const walk = (x - startX) * 1.5;
      track.style.transform = `translateX(${currentTranslate + walk}px)`;
    });

    // Touch events para móvil
    carousel.addEventListener('touchstart', (e) => {
      isDown = true;
      carousel.classList.add('is-dragging');
      startX = e.touches[0].pageX;
      currentTranslate = getTranslateX();
      track.style.transform = `translateX(${currentTranslate}px)`;
    }, { passive: true });

    carousel.addEventListener('touchend', () => {
      isDown = false;
      carousel.classList.remove('is-dragging');
      track.style.transform = '';
    });

    carousel.addEventListener('touchmove', (e) => {
      if (!isDown) return;
      const x = e.touches[0].pageX;
      const walk = (x - startX) * 1.5;
      track.style.transform = `translateX(${currentTranslate + walk}px)`;
    }, { passive: true });
  }
</script>
