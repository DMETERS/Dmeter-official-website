---
import { type Lang, defaultLang, useTranslations } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const capabilities = [
  'Web Moderno',
  'Backend Escalable',
  'Automatizaci√≥n & IA',
  'Cloud Native',
  'Datos & Analytics',
  'Integraciones'
];

const pointIcons = [
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />`,
  `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />`
];

const colors = ['primary', 'accent-cyan', 'accent-solar'];
---

<section class="py-20 md:py-32 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary/5 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold">
        {t.why.title}
      </h2>
      <p class="mt-4 text-lg text-text-muted">
        {t.why.subtitle}
      </p>
    </div>

    <!-- Value propositions -->
    <div class="grid md:grid-cols-3 gap-8 mb-20">
      {t.why.points.map((point, index) => (
        <div class="text-center group">
          <div class={`w-16 h-16 mx-auto rounded-2xl bg-${colors[index]}/20 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform`}>
            <svg class={`w-8 h-8 text-${colors[index]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={pointIcons[index]} />
          </div>
          <h3 class="text-xl font-semibold text-text-light mb-3">
            {point.title}
          </h3>
          <p class="text-text-muted leading-relaxed">
            {point.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Capabilities -->
    <div class="text-center">
      <h3 class="text-xl font-semibold text-text-light mb-8">
        {t.why.techTitle}
      </h3>
    </div>
  </div>

  <!-- Carousel infinito de capacidades -->
  <div class="capabilities-carousel overflow-hidden mt-4 relative">
    <!-- Fade en los bordes -->
    <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-bg-dark to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-bg-dark to-transparent z-10 pointer-events-none"></div>

    <div class="capabilities-track flex gap-6">
      {/* Triplicamos para efecto infinito sin cortes */}
      {[...capabilities, ...capabilities, ...capabilities, ...capabilities].map((cap) => (
        <div class="px-6 py-3 rounded-xl glass whitespace-nowrap flex-shrink-0">
          <span class="text-text-muted font-medium">{cap}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes scroll-infinite {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-25%);
    }
  }

  .capabilities-track {
    animation: scroll-infinite 15s linear infinite;
  }

  .capabilities-carousel:hover .capabilities-track {
    animation-play-state: paused;
  }

  .capabilities-carousel {
    cursor: grab;
  }

  .capabilities-carousel:active {
    cursor: grabbing;
  }
</style>
