---
import { type Lang, defaultLang, useTranslations } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative min-h-screen flex items-center pt-20 overflow-hidden">
  <!-- ═══════════════════════════════════════════════════════════════
       BACKGROUND SOLARPUNK - El ecosistema digital
       ═══════════════════════════════════════════════════════════════ -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">

    <!-- Orbes de energía solar - como soles en el horizonte -->
    <div class="orb-solar orb-solar-green w-[500px] h-[500px] top-0 -left-48 animate-breathe"></div>
    <div class="orb-solar orb-solar-gold w-[400px] h-[400px] top-20 right-0 animate-breathe" style="animation-delay: 1.5s;"></div>
    <div class="orb-solar orb-solar-cyan w-[600px] h-[600px] bottom-0 left-1/3 animate-breathe" style="animation-delay: 0.8s;"></div>

    <!-- Grid orgánico de fondo -->
    <div class="absolute inset-0 bg-grid-organic opacity-60"></div>

    <!-- Puntos como semillas dispersas -->
    <div class="absolute inset-0 bg-dots-seeds opacity-30"></div>

    <!-- Gradiente de horizonte forestal -->
    <div class="absolute bottom-0 left-0 right-0 h-64 bg-gradient-to-t from-bg-dark via-bg-dark/80 to-transparent"></div>

    <!-- SVG Decorativo: Hojas flotantes -->
    <svg class="absolute top-32 left-10 w-16 h-16 text-primary/20 animate-sway" viewBox="0 0 100 100" fill="currentColor">
      <path d="M50 5 C20 25, 5 50, 15 75 C25 60, 40 50, 50 45 C60 50, 75 60, 85 75 C95 50, 80 25, 50 5 Z"/>
    </svg>

    <svg class="absolute top-48 right-20 w-12 h-12 text-green-sprout/30 animate-sway" style="animation-delay: 2s;" viewBox="0 0 100 100" fill="currentColor">
      <path d="M50 5 C20 25, 5 50, 15 75 C25 60, 40 50, 50 45 C60 50, 75 60, 85 75 C95 50, 80 25, 50 5 Z"/>
    </svg>

    <svg class="absolute bottom-40 left-20 w-10 h-10 text-accent-cyan/20 animate-sway" style="animation-delay: 3s;" viewBox="0 0 100 100" fill="currentColor">
      <path d="M50 5 C20 25, 5 50, 15 75 C25 60, 40 50, 50 45 C60 50, 75 60, 85 75 C95 50, 80 25, 50 5 Z"/>
    </svg>

    <!-- Luciérnagas / Partículas de energía -->
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-solar-gold rounded-full animate-firefly"></div>
    <div class="absolute top-1/3 right-1/3 w-1.5 h-1.5 bg-primary rounded-full animate-firefly" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/3 left-1/3 w-2 h-2 bg-accent-cyan rounded-full animate-firefly" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 right-1/4 w-1 h-1 bg-green-lime rounded-full animate-firefly" style="animation-delay: 0.5s;"></div>
    <div class="absolute bottom-1/4 right-1/2 w-1.5 h-1.5 bg-solar-gold rounded-full animate-firefly" style="animation-delay: 1.5s;"></div>
  </div>

  <!-- ═══════════════════════════════════════════════════════════════
       CONTENIDO PRINCIPAL
       ═══════════════════════════════════════════════════════════════ -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">

      <!-- Texto con alma -->
      <div class="text-center lg:text-left animate-sprout">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight tracking-tight">
          <span class="text-text-light">{t.hero.title}</span>
          <span class="gradient-text block mt-3">
            {t.hero.titleHighlight}
          </span>
          <span class="text-text-light block mt-3">{t.hero.titleEnd}</span>
        </h1>

        <p class="mt-8 text-lg sm:text-xl text-text-muted max-w-xl mx-auto lg:mx-0 leading-relaxed">
          {t.hero.subtitle}
        </p>

        <!-- Botones que florecen -->
        <div class="mt-12 flex flex-col sm:flex-row gap-5 justify-center lg:justify-start">
          <a
            href="#contact"
            class="btn-bloom text-white text-lg inline-flex items-center justify-center gap-3 group"
          >
            <span>{t.hero.cta}</span>
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="#services"
            class="btn-outline-organic text-lg inline-flex items-center justify-center gap-2 group"
          >
            <span>{t.hero.ctaSecondary}</span>
            <svg class="w-5 h-5 transition-transform group-hover:translate-y-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </a>
        </div>

        <!-- Indicadores de confianza / Stats -->
        <div class="mt-12 pt-8 border-t border-primary/10">
          <div class="flex flex-wrap gap-8 justify-center lg:justify-start">
            <div class="text-center lg:text-left">
              <div class="text-3xl font-bold gradient-text-static">50+</div>
              <div class="text-text-dim text-sm mt-1">Proyectos</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-3xl font-bold gradient-text-static">3</div>
              <div class="text-text-dim text-sm mt-1">Países</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-3xl font-bold gradient-text-static">100%</div>
              <div class="text-text-dim text-sm mt-1">Compromiso</div>
            </div>
          </div>
        </div>
      </div>

      <!-- ═══════════════════════════════════════════════════════════════
           ILUSTRACIÓN SOLARPUNK - Ciudad verde futurista
           ═══════════════════════════════════════════════════════════════ -->
      <div class="relative hidden lg:block">
        <div class="relative w-full aspect-square max-w-xl mx-auto">

          <!-- Ilustración principal: Torre Solarpunk AI -->
          <svg class="w-full h-full" viewBox="0 0 500 500" fill="none" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <!-- Gradientes principales -->
              <linearGradient id="tower-grad" x1="0%" y1="100%" x2="0%" y2="0%">
                <stop offset="0%" stop-color="#0F1F1A"/>
                <stop offset="50%" stop-color="#1A3D2E"/>
                <stop offset="100%" stop-color="#245A42"/>
              </linearGradient>
              <linearGradient id="ai-core-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#10B981"/>
                <stop offset="50%" stop-color="#06B6D4"/>
                <stop offset="100%" stop-color="#10B981"/>
              </linearGradient>
              <linearGradient id="energy-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#FFD700"/>
                <stop offset="50%" stop-color="#10B981"/>
                <stop offset="100%" stop-color="#06B6D4"/>
              </linearGradient>
              <linearGradient id="glass-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#10B981" stop-opacity="0.4"/>
                <stop offset="100%" stop-color="#06B6D4" stop-opacity="0.2"/>
              </linearGradient>
              <linearGradient id="leaf-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#10B981"/>
                <stop offset="100%" stop-color="#4A7C59"/>
              </linearGradient>
              <linearGradient id="neural-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#06B6D4" stop-opacity="0.8"/>
                <stop offset="100%" stop-color="#10B981" stop-opacity="0.4"/>
              </linearGradient>
              <radialGradient id="core-glow" cx="50%" cy="50%" r="50%">
                <stop offset="0%" stop-color="#06B6D4"/>
                <stop offset="50%" stop-color="#10B981" stop-opacity="0.6"/>
                <stop offset="100%" stop-color="#10B981" stop-opacity="0"/>
              </radialGradient>

              <!-- Filtros -->
              <filter id="glow" x="-100%" y="-100%" width="300%" height="300%">
                <feGaussianBlur stdDeviation="8" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
              <filter id="glow-strong" x="-100%" y="-100%" width="300%" height="300%">
                <feGaussianBlur stdDeviation="12" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
            </defs>

            <!-- ═══ FONDO: Red neuronal sutil ═══ -->
            <g class="animate-breathe" stroke="url(#neural-grad)" stroke-width="0.5" fill="none" opacity="0.3">
              <path d="M50 100 Q150 150 250 120 Q350 90 450 140"/>
              <path d="M30 200 Q130 180 230 220 Q330 260 430 200"/>
              <path d="M60 300 Q160 280 260 320 Q360 360 460 300"/>
              <circle cx="150" cy="140" r="3" fill="#06B6D4" opacity="0.5"/>
              <circle cx="250" cy="120" r="2" fill="#10B981" opacity="0.6"/>
              <circle cx="350" cy="130" r="3" fill="#06B6D4" opacity="0.4"/>
              <circle cx="130" cy="200" r="2" fill="#10B981" opacity="0.5"/>
              <circle cx="330" cy="220" r="3" fill="#06B6D4" opacity="0.4"/>
            </g>

            <!-- ═══ TORRE PRINCIPAL SOLARPUNK AI ═══ -->
            <g class="animate-float" style="animation-delay: 0.2s;">
              <!-- Base de la torre - forma orgánica -->
              <path d="M200 420
                       Q190 380 195 340
                       Q200 300 210 260
                       Q220 220 230 180
                       Q240 140 250 100
                       Q260 140 270 180
                       Q280 220 290 260
                       Q300 300 305 340
                       Q310 380 300 420
                       Z"
                    fill="url(#tower-grad)"
                    stroke="#10B981"
                    stroke-width="1"
                    stroke-opacity="0.4"/>

              <!-- Estructura interna - niveles -->
              <path d="M215 380 Q220 360 225 340 Q240 320 250 300 Q260 320 275 340 Q280 360 285 380"
                    fill="none" stroke="#10B981" stroke-width="1" stroke-opacity="0.3"/>
              <path d="M225 320 Q235 300 250 280 Q265 300 275 320"
                    fill="none" stroke="#06B6D4" stroke-width="1" stroke-opacity="0.3"/>
              <path d="M235 260 Q245 240 250 220 Q255 240 265 260"
                    fill="none" stroke="#10B981" stroke-width="1" stroke-opacity="0.3"/>

              <!-- Ventanas/Paneles tech -->
              <rect x="225" y="350" width="20" height="12" rx="3" fill="url(#glass-grad)"/>
              <rect x="255" y="350" width="20" height="12" rx="3" fill="url(#glass-grad)"/>
              <rect x="230" y="310" width="18" height="10" rx="2" fill="url(#glass-grad)"/>
              <rect x="252" y="310" width="18" height="10" rx="2" fill="url(#glass-grad)"/>
              <rect x="237" y="270" width="12" height="8" rx="2" fill="url(#glass-grad)"/>
              <rect x="251" y="270" width="12" height="8" rx="2" fill="url(#glass-grad)"/>
              <rect x="242" y="230" width="16" height="8" rx="2" fill="url(#glass-grad)"/>

              <!-- Jardines verticales en cascada -->
              <ellipse cx="210" cy="390" rx="18" ry="8" fill="url(#leaf-grad)" opacity="0.9"/>
              <ellipse cx="290" cy="390" rx="18" ry="8" fill="url(#leaf-grad)" opacity="0.9"/>
              <ellipse cx="205" cy="350" rx="15" ry="6" fill="#4A7C59" opacity="0.85"/>
              <ellipse cx="295" cy="350" rx="15" ry="6" fill="#4A7C59" opacity="0.85"/>
              <ellipse cx="212" cy="310" rx="12" ry="5" fill="url(#leaf-grad)" opacity="0.8"/>
              <ellipse cx="288" cy="310" rx="12" ry="5" fill="url(#leaf-grad)" opacity="0.8"/>
              <ellipse cx="220" cy="270" rx="10" ry="4" fill="#2D5A3D" opacity="0.7"/>
              <ellipse cx="280" cy="270" rx="10" ry="4" fill="#2D5A3D" opacity="0.7"/>
              <ellipse cx="228" cy="235" rx="8" ry="3" fill="url(#leaf-grad)" opacity="0.6"/>
              <ellipse cx="272" cy="235" rx="8" ry="3" fill="url(#leaf-grad)" opacity="0.6"/>

              <!-- Corona verde en la cima -->
              <ellipse cx="250" cy="105" rx="25" ry="12" fill="url(#leaf-grad)" opacity="0.9"/>
              <ellipse cx="240" cy="100" rx="15" ry="8" fill="#4A7C59" opacity="0.8"/>
              <ellipse cx="260" cy="100" rx="15" ry="8" fill="#2D5A3D" opacity="0.7"/>
            </g>

            <!-- ═══ NÚCLEO DE IA - El corazón brillante ═══ -->
            <g class="animate-solar-pulse">
              <!-- Glow externo -->
              <circle cx="250" cy="180" r="50" fill="url(#core-glow)" opacity="0.4"/>

              <!-- Anillos de energía -->
              <circle cx="250" cy="180" r="35" fill="none" stroke="url(#ai-core-grad)" stroke-width="1" opacity="0.6" stroke-dasharray="8,4"/>
              <circle cx="250" cy="180" r="28" fill="none" stroke="#06B6D4" stroke-width="0.5" opacity="0.5"/>

              <!-- Núcleo central -->
              <circle cx="250" cy="180" r="20" fill="url(#ai-core-grad)" filter="url(#glow-strong)" opacity="0.9"/>
              <circle cx="250" cy="180" r="12" fill="#06B6D4" opacity="0.8"/>
              <circle cx="250" cy="180" r="6" fill="#ffffff" opacity="0.9"/>

              <!-- Partículas de datos orbitando -->
              <g class="animate-sun" style="transform-origin: 250px 180px;">
                <circle cx="250" cy="145" r="3" fill="#FFD700" opacity="0.8"/>
                <circle cx="285" cy="180" r="2" fill="#10B981" opacity="0.7"/>
                <circle cx="250" cy="215" r="3" fill="#06B6D4" opacity="0.8"/>
                <circle cx="215" cy="180" r="2" fill="#FFD700" opacity="0.7"/>
              </g>
            </g>

            <!-- ═══ CONEXIONES DE ENERGÍA/DATOS ═══ -->
            <g stroke="url(#energy-grad)" stroke-width="2" fill="none" opacity="0.6">
              <!-- Líneas que fluyen desde el núcleo -->
              <path d="M250 200 Q230 250 210 300 Q190 350 180 400" stroke-dasharray="6,4" class="animate-breathe"/>
              <path d="M250 200 Q270 250 290 300 Q310 350 320 400" stroke-dasharray="6,4" class="animate-breathe" style="animation-delay: 0.5s;"/>
              <path d="M230 180 Q180 200 130 220 Q90 240 60 260" stroke-dasharray="4,6" class="animate-breathe" style="animation-delay: 1s;"/>
              <path d="M270 180 Q320 200 370 220 Q410 240 440 260" stroke-dasharray="4,6" class="animate-breathe" style="animation-delay: 1.5s;"/>
            </g>

            <!-- Nodos de energía en las conexiones -->
            <g filter="url(#glow)">
              <circle cx="210" cy="300" r="4" fill="#10B981" class="animate-firefly"/>
              <circle cx="290" cy="300" r="4" fill="#06B6D4" class="animate-firefly" style="animation-delay: 0.3s;"/>
              <circle cx="130" cy="220" r="3" fill="#FFD700" class="animate-firefly" style="animation-delay: 0.6s;"/>
              <circle cx="370" cy="220" r="3" fill="#FFD700" class="animate-firefly" style="animation-delay: 0.9s;"/>
            </g>

            <!-- ═══ ESTRUCTURAS SATELITALES ═══ -->
            <!-- Edificio izquierdo con domo -->
            <g class="animate-float" style="animation-delay: 0.8s;">
              <rect x="60" y="300" width="60" height="120" rx="8" fill="url(#tower-grad)" stroke="#10B981" stroke-width="1" stroke-opacity="0.3"/>
              <!-- Bio-domo -->
              <ellipse cx="90" cy="300" rx="25" ry="12" fill="url(#glass-grad)" stroke="#06B6D4" stroke-width="1" stroke-opacity="0.4"/>
              <ellipse cx="90" cy="298" rx="18" ry="8" fill="url(#leaf-grad)" opacity="0.7"/>
              <!-- Ventanas -->
              <rect x="70" y="320" width="15" height="10" rx="2" fill="url(#glass-grad)"/>
              <rect x="95" y="320" width="15" height="10" rx="2" fill="url(#glass-grad)"/>
              <rect x="70" y="350" width="15" height="10" rx="2" fill="url(#glass-grad)"/>
              <rect x="95" y="350" width="15" height="10" rx="2" fill="url(#glass-grad)"/>
              <!-- Plantas -->
              <ellipse cx="70" cy="380" rx="12" ry="5" fill="url(#leaf-grad)" opacity="0.8"/>
              <ellipse cx="110" cy="385" rx="10" ry="4" fill="#4A7C59" opacity="0.7"/>
            </g>

            <!-- Edificio derecho con antena IA -->
            <g class="animate-float" style="animation-delay: 1.2s;">
              <rect x="380" y="320" width="55" height="100" rx="6" fill="url(#tower-grad)" stroke="#10B981" stroke-width="1" stroke-opacity="0.3"/>
              <!-- Antena/Receptor IA -->
              <rect x="405" y="280" width="4" height="40" fill="#245A42"/>
              <circle cx="407" cy="275" r="8" fill="url(#ai-core-grad)" opacity="0.7" filter="url(#glow)"/>
              <circle cx="407" cy="275" r="4" fill="#06B6D4"/>
              <!-- Ventanas -->
              <rect x="390" y="340" width="12" height="8" rx="2" fill="url(#glass-grad)"/>
              <rect x="412" y="340" width="12" height="8" rx="2" fill="url(#glass-grad)"/>
              <rect x="390" y="370" width="12" height="8" rx="2" fill="url(#glass-grad)"/>
              <rect x="412" y="370" width="12" height="8" rx="2" fill="url(#glass-grad)"/>
              <!-- Plantas -->
              <ellipse cx="385" cy="400" rx="10" ry="4" fill="url(#leaf-grad)" opacity="0.8"/>
              <ellipse cx="430" cy="395" rx="12" ry="5" fill="#4A7C59" opacity="0.7"/>
            </g>

            <!-- ═══ DRONES / AGENTES IA ═══ -->
            <g class="animate-float" style="animation-delay: 0.3s;">
              <!-- Drone 1 -->
              <ellipse cx="350" cy="140" rx="12" ry="4" fill="#245A42" opacity="0.9"/>
              <rect x="346" y="136" width="8" height="3" rx="1" fill="#06B6D4" opacity="0.8"/>
              <circle cx="350" cy="134" r="2" fill="#10B981" class="animate-firefly"/>
            </g>
            <g class="animate-float" style="animation-delay: 1s;">
              <!-- Drone 2 -->
              <ellipse cx="150" cy="180" rx="10" ry="3" fill="#245A42" opacity="0.8"/>
              <rect x="147" y="177" width="6" height="2" rx="1" fill="#06B6D4" opacity="0.7"/>
              <circle cx="150" cy="175" r="1.5" fill="#FFD700" class="animate-firefly" style="animation-delay: 0.5s;"/>
            </g>

            <!-- ═══ SUELO Y VEGETACIÓN ═══ -->
            <ellipse cx="250" cy="430" rx="220" ry="35" fill="#0F1F1A" opacity="0.7"/>

            <!-- Árboles tech-orgánicos -->
            <g class="animate-sway">
              <rect x="40" y="380" width="6" height="35" fill="#2D5A3D"/>
              <ellipse cx="43" cy="365" rx="22" ry="25" fill="url(#leaf-grad)" opacity="0.9"/>
              <ellipse cx="35" cy="375" rx="12" ry="15" fill="#4A7C59" opacity="0.8"/>
              <!-- Bioluminiscencia en árbol -->
              <circle cx="43" cy="365" r="3" fill="#06B6D4" opacity="0.5" class="animate-firefly"/>
            </g>

            <g class="animate-sway" style="animation-delay: 0.8s;">
              <rect x="450" y="370" width="8" height="45" fill="#2D5A3D"/>
              <ellipse cx="454" cy="350" rx="28" ry="32" fill="url(#leaf-grad)" opacity="0.85"/>
              <ellipse cx="468" cy="360" rx="18" ry="20" fill="#4A7C59" opacity="0.9"/>
              <ellipse cx="445" cy="365" rx="15" ry="18" fill="#2D5A3D" opacity="0.7"/>
              <circle cx="454" cy="350" r="4" fill="#10B981" opacity="0.5" class="animate-firefly" style="animation-delay: 0.3s;"/>
            </g>

            <!-- Plantas pequeñas con glow -->
            <ellipse cx="160" cy="415" rx="14" ry="6" fill="url(#leaf-grad)" opacity="0.8"/>
            <ellipse cx="340" cy="418" rx="12" ry="5" fill="url(#leaf-grad)" opacity="0.75"/>
            <ellipse cx="200" cy="425" rx="8" ry="3" fill="#4A7C59" opacity="0.6"/>
            <ellipse cx="300" cy="422" rx="10" ry="4" fill="#2D5A3D" opacity="0.65"/>

            <!-- ═══ RAÍCES TECH / CIRCUITOS SUBTERRÁNEOS ═══ -->
            <g stroke="#10B981" stroke-width="1.5" stroke-opacity="0.25" fill="none">
              <path d="M100 420 Q150 445 200 435 Q250 425 300 435 Q350 445 400 420"/>
              <path d="M80 430 Q130 450 200 445 Q270 440 340 450 Q410 460 420 435"/>
            </g>
            <!-- Nodos de datos en raíces -->
            <circle cx="200" cy="435" r="4" fill="#06B6D4" opacity="0.4"/>
            <circle cx="300" cy="435" r="3" fill="#10B981" opacity="0.5"/>
            <circle cx="250" cy="430" r="5" fill="#FFD700" opacity="0.35"/>

            <!-- ═══ PARTÍCULAS ATMOSFÉRICAS ═══ -->
            <circle cx="100" cy="100" r="1.5" fill="#FFD700" opacity="0.6" class="animate-firefly"/>
            <circle cx="400" cy="90" r="2" fill="#10B981" opacity="0.5" class="animate-firefly" style="animation-delay: 0.7s;"/>
            <circle cx="80" cy="250" r="1" fill="#06B6D4" opacity="0.6" class="animate-firefly" style="animation-delay: 1.2s;"/>
            <circle cx="420" cy="300" r="1.5" fill="#FFD700" opacity="0.5" class="animate-firefly" style="animation-delay: 0.4s;"/>
            <circle cx="180" cy="120" r="1" fill="#10B981" opacity="0.5" class="animate-firefly" style="animation-delay: 1.5s;"/>
            <circle cx="320" cy="80" r="1.5" fill="#06B6D4" opacity="0.6" class="animate-firefly" style="animation-delay: 0.9s;"/>
          </svg>

          <!-- Cards flotantes con iconos tech -->
          <div class="absolute -top-4 -right-4 w-20 h-20 glass-warm rounded-2xl animate-float flex items-center justify-center shadow-lg" style="animation-delay: 0.3s;">
            <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>

