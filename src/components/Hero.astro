---
import { type Lang, defaultLang, useTranslations } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative min-h-screen flex items-center pt-20 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Gradient orbs -->
    <div class="absolute top-1/4 -left-32 w-96 h-96 bg-primary/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-accent-cyan/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/5 rounded-full blur-3xl"></div>

    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(16,185,129,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(16,185,129,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Text content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold leading-tight">
          {t.hero.title}
          <span class="gradient-text block mt-2">
            {t.hero.titleHighlight}
          </span>
          <span class="block mt-2">{t.hero.titleEnd}</span>
        </h1>

        <p class="mt-6 text-lg sm:text-xl text-text-muted max-w-xl mx-auto lg:mx-0">
          {t.hero.subtitle}
        </p>

        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href="#contact"
            class="gradient-solarpunk text-white px-8 py-4 rounded-xl font-semibold text-lg hover:opacity-90 transition-all hover:scale-105 animate-pulse-glow inline-flex items-center justify-center gap-2"
          >
            {t.hero.cta}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="#services"
            class="border border-primary/30 text-text-light px-8 py-4 rounded-xl font-semibold text-lg hover:bg-primary/10 hover:border-primary transition-all inline-flex items-center justify-center gap-2"
          >
            {t.hero.ctaSecondary}
          </a>
        </div>
      </div>

      <!-- Visual element -->
      <div class="relative hidden lg:block">
        <div class="relative w-full aspect-square max-w-lg mx-auto">
          <!-- Main floating card -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 glass rounded-3xl animate-float flex items-center justify-center">
            <div class="text-center">
              <div class="w-20 h-20 mx-auto rounded-2xl gradient-solarpunk flex items-center justify-center mb-4">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </div>
              <p class="text-text-light font-semibold">Software</p>
              <p class="text-text-muted text-sm">a medida</p>
            </div>
          </div>

          <!-- Floating elements -->
          <div class="absolute top-8 right-8 w-16 h-16 glass rounded-2xl animate-float flex items-center justify-center" style="animation-delay: 0.5s;">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>

          <div class="absolute bottom-12 left-4 w-20 h-20 glass rounded-2xl animate-float flex items-center justify-center" style="animation-delay: 1s;">
            <svg class="w-10 h-10 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>

          <div class="absolute top-1/3 left-0 w-14 h-14 glass rounded-xl animate-float flex items-center justify-center" style="animation-delay: 1.5s;">
            <svg class="w-7 h-7 text-accent-solar" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>

          <div class="absolute bottom-1/4 right-0 w-12 h-12 glass rounded-xl animate-float flex items-center justify-center" style="animation-delay: 2s;">
            <svg class="w-6 h-6 text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>

          <!-- Connection lines (decorative) -->
          <svg class="absolute inset-0 w-full h-full" viewBox="0 0 400 400">
            <defs>
              <linearGradient id="line-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#10B981;stop-opacity:0.3" />
                <stop offset="100%" style="stop-color:#06B6D4;stop-opacity:0.1" />
              </linearGradient>
            </defs>
            <path d="M200 200 L320 80" stroke="url(#line-gradient)" stroke-width="1" fill="none" stroke-dasharray="5,5" />
            <path d="M200 200 L80 280" stroke="url(#line-gradient)" stroke-width="1" fill="none" stroke-dasharray="5,5" />
            <path d="M200 200 L60 160" stroke="url(#line-gradient)" stroke-width="1" fill="none" stroke-dasharray="5,5" />
            <path d="M200 200 L340 280" stroke="url(#line-gradient)" stroke-width="1" fill="none" stroke-dasharray="5,5" />
          </svg>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce hidden md:block">
      <a href="#services" class="text-text-muted hover:text-primary transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </div>
</section>
