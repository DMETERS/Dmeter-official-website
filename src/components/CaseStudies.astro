          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Carousel functionality
  const track = document.getElementById('carousel-track');
  const prevBtn = document.getElementById('carousel-prev');
  const nextBtn = document.getElementById('carousel-next');
  const dots = document.querySelectorAll('.carousel-dot');

  if (track && prevBtn && nextBtn) {
    let currentIndex = 0;
    let autoplayInterval: ReturnType<typeof setInterval> | null = null;
    const totalSlides = dots.length;

    // Calcular slides visibles según viewport
    function getSlidesPerView(): number {
      if (window.innerWidth >= 1024) return 3;
      if (window.innerWidth >= 768) return 2;
      return 1;
    }

    // Obtener ancho de slide
    function getSlideWidth(): number {
      const slide = track.querySelector('.carousel-slide') as HTMLElement;
      if (!slide) return 0;
      const gap = 24; // 1.5rem gap
      return slide.offsetWidth + gap;
    }

    // Scroll a índice específico
    function scrollToIndex(index: number): void {
      const slideWidth = getSlideWidth();
      const maxIndex = Math.max(0, totalSlides - getSlidesPerView());
      currentIndex = Math.max(0, Math.min(index, maxIndex));
      track.scrollTo({
        left: currentIndex * slideWidth,
        behavior: 'smooth'
      });
      updateDots();
    }

    // Actualizar dots activos
    function updateDots(): void {
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentIndex);
      });
    }

    // Navegación
    prevBtn.addEventListener('click', () => {
      scrollToIndex(currentIndex - 1);
      resetAutoplay();
    });

    nextBtn.addEventListener('click', () => {
      scrollToIndex(currentIndex + 1);
      resetAutoplay();
    });

    // Click en dots
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        scrollToIndex(index);
        resetAutoplay();
      });
    });

    // Detectar scroll manual (swipe)
    let isScrolling = false;
    track.addEventListener('scroll', () => {
      if (!isScrolling) {
        isScrolling = true;
        setTimeout(() => {
          const slideWidth = getSlideWidth();
          if (slideWidth > 0) {
            currentIndex = Math.round(track.scrollLeft / slideWidth);
            updateDots();
          }
          isScrolling = false;
        }, 100);
      }
    });

    // Autoplay - Como el ciclo natural (6 segundos)
    function startAutoplay(): void {
      // Respetar prefers-reduced-motion
      if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        return;
      }

      autoplayInterval = setInterval(() => {
        const maxIndex = Math.max(0, totalSlides - getSlidesPerView());
        if (currentIndex >= maxIndex) {
          scrollToIndex(0);
        } else {
          scrollToIndex(currentIndex + 1);
        }
      }, 6000);
    }

    function stopAutoplay(): void {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    function resetAutoplay(): void {
      stopAutoplay();
      startAutoplay();
    }

    // Pausar autoplay al hover
    const container = document.getElementById('cases-carousel');
    container?.addEventListener('mouseenter', stopAutoplay);
    container?.addEventListener('mouseleave', startAutoplay);

    // Pausar en touch
    track.addEventListener('touchstart', stopAutoplay);
    track.addEventListener('touchend', () => {
      setTimeout(startAutoplay, 3000);
    });

    // Keyboard navigation
    container?.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        scrollToIndex(currentIndex - 1);
        resetAutoplay();
      } else if (e.key === 'ArrowRight') {
        scrollToIndex(currentIndex + 1);
        resetAutoplay();
      }
    });

    // Iniciar autoplay
    startAutoplay();

    // Re-calcular en resize
    window.addEventListener('resize', () => {
      updateDots();
    });
  }
</script>

