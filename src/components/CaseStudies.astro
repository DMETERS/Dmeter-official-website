        </svg>
      </button>
    </div>

    <!-- Dots indicadores -->
    <div class="carousel-dots" id="carousel-dots">
      {t.cases.items.map((_, index) => (
        <button
          class={`carousel-dot ${index === 0 ? 'active' : ''}`}
          data-index={index}
          aria-label={`Ir al caso ${index + 1}`}
        ></button>
      ))}
    </div>

    <!-- Contador y CTA -->
    <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-6">
      <div class="flex items-center gap-2 text-text-dim">
        <span class="text-2xl font-bold gradient-text-static">50+</span>
        <span class="text-sm">proyectos exitosos</span>
      </div>

      <div class="hidden sm:block w-px h-6 bg-primary/20"></div>

      <a
        href="#contact"
        class="inline-flex items-center gap-2 text-primary hover:text-primary-light transition-colors group"
      >
        <span class="font-medium">¿Quieres ser el próximo?</span>
