<section id="cases" class="py-24 md:py-36 relative overflow-hidden">
  <!-- Fondo orgánico -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute inset-0 bg-dots-seeds opacity-15"></div>
    <div class="orb-solar orb-solar-green w-[400px] h-[400px] -top-32 -left-32 opacity-30"></div>
    <div class="orb-solar orb-solar-cyan w-[300px] h-[300px] bottom-0 right-0 opacity-25"></div>
    <div class="orb-solar orb-solar-gold w-[250px] h-[250px] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 opacity-15"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6">
        <svg class="w-4 h-4 text-solar-gold" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <span class="text-sm text-primary font-medium">Proyectos que florecieron</span>
      </div>

      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight">
        <span class="text-text-light">{t.cases.title.split(' ').slice(0, -1).join(' ')}</span>
        <span class="gradient-text-static"> {t.cases.title.split(' ').slice(-1)}</span>
      </h2>

      <p class="mt-6 text-lg text-text-muted leading-relaxed">
        {t.cases.subtitle}
      </p>
    </div>

    <!-- Carousel Container -->
    <div class="carousel-container px-12 md:px-16" id="cases-carousel">
      <!-- Botón Anterior -->
      <button
        class="carousel-btn carousel-btn-prev"
        id="carousel-prev"
        aria-label="Ver casos anteriores"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <!-- Track del Carousel -->
      <div class="carousel-track" id="carousel-track">
        {t.cases.items.map((caseItem, index) => {
          const style = cardStyles[index % cardStyles.length];
          return (
          <article class="carousel-slide">
            <div class="group h-full card-organic relative overflow-hidden">
              <!-- Decoración de hoja en esquina -->
              <div class="absolute -top-4 -right-4 w-24 h-24 opacity-10 group-hover:opacity-20 transition-opacity">
                <svg viewBox="0 0 100 100" fill="currentColor" class="text-primary">
                  <path d="M90 10 C60 20, 40 40, 30 70 C50 60, 70 50, 90 10 Z"/>
                </svg>
              </div>

              <!-- Badge de industria -->
              <div class="flex items-center justify-between mb-4">
                <span class={`inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wider ${style.badgeBg} ${style.text}`}>
                  {caseItem.industry}
                </span>
                <div class={`w-10 h-10 rounded-xl ${style.iconBg} flex items-center justify-center group-hover:scale-110 transition-all duration-500`}>
                  <svg class={`w-5 h-5 ${style.text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={industryIcons[caseItem.industry] || industryIcons['E-commerce']} />
                </div>
              </div>

              <!-- Título -->
              <h3 class="text-lg font-bold text-text-light mb-3 group-hover:text-primary transition-colors leading-tight">
                {caseItem.title}
              </h3>

              <!-- Descripción -->
              <p class="text-text-muted text-sm leading-relaxed mb-5 line-clamp-3">
                {caseItem.description}
              </p>

              <!-- Resultados -->
              <div class="space-y-2 mt-auto">
                {caseItem.results.map((result) => (
                  <div class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-xs text-text-muted leading-relaxed">{result}</span>
                  </div>
                ))}
              </div>

              <!-- Línea de crecimiento al hover -->
              <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary via-accent-cyan to-primary opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
          </article>
        )})}
