---
import { type Lang, defaultLang, useTranslations } from '../i18n/utils';

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const industryIcons: Record<string, string> = {
  'Log√≠stica': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />`,
  'Logistics': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />`,
  'Fintech': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  'Retail': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`,
  'Varejo': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />`
};

const cardColors = ['primary', 'accent-cyan', 'accent-solar'];
---

<section id="cases" class="py-20 md:py-32 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-bg-card/30 to-transparent pointer-events-none"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold">
        {t.cases.title}
      </h2>
      <p class="mt-4 text-lg text-text-muted">
        {t.cases.subtitle}
      </p>
    </div>

    <!-- Cases grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {t.cases.items.map((caseItem, index) => (
        <article class={`group bg-bg-card border border-${cardColors[index]}/20 rounded-2xl overflow-hidden card-hover`}>
          <!-- Header with icon -->
          <div class={`h-32 bg-gradient-to-br from-${cardColors[index]}/20 to-transparent p-6 flex items-start justify-between`}>
            <div>
              <span class={`text-xs font-semibold uppercase tracking-wider text-${cardColors[index]}`}>
                {caseItem.industry}
              </span>
              <h3 class="text-xl font-semibold text-text-light mt-2">
                {caseItem.title}
              </h3>
            </div>
            <div class={`w-12 h-12 rounded-xl bg-${cardColors[index]}/20 flex items-center justify-center`}>
              <svg class={`w-6 h-6 text-${cardColors[index]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={industryIcons[caseItem.industry] || industryIcons['Retail']} />
            </div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <p class="text-text-muted leading-relaxed mb-6">
              {caseItem.description}
            </p>

            <!-- Results -->
            <div class="space-y-2">
              {caseItem.results.map((result) => (
                <div class="flex items-center gap-3">
                  <div class={`w-5 h-5 rounded-full bg-${cardColors[index]}/20 flex items-center justify-center flex-shrink-0`}>
                    <svg class={`w-3 h-3 text-${cardColors[index]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-sm text-text-muted">{result}</span>
                </div>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
